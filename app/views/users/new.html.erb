<%content_for :title, "Sing Up"%>
<%= form_for @user do |f| %>
<%= f.label :hello, "Name:" %>
<%= f.text_field :name %>
<%= f.label :Email%>
<%= f.text_field :email %>
<%= f.label :password%>
<%= f.password_field :password %>
<%= f.label :password_confirmation%>
<%= f.password_field :password_confirmation %>
<%= f.submit :Save %>
<% end %>